{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": false,
    "outDir": "./dist/amd",
    "rootDir": "./src",
    "lib": [
      "es2016",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./custom_typings"
    ]
  }
}